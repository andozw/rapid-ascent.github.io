<style>
.contact-wrap {
  max-width: 640px;
  margin: 2rem auto;
  padding: 0 1rem;
}

.contact-wrap h1 {
  text-align: left;
  margin-bottom: 1.5rem;
}

.contact-form label {
  display: block;
  font-weight: 600;
  margin-bottom: 0.4rem;
}

.contact-form input,
.contact-form textarea {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 1rem;
  background: #fff;
  color: #111;
}

.contact-form textarea {
  min-height: 160px;
  resize: vertical;
}

.contact-form .field {
  margin-bottom: 1.25rem;
}

.contact-form button {
  padding: 0.7rem 1.4rem;
  font-size: 1rem;
  border: none;
  border-radius: 4px;
  background: #111;
  color: #fff;
  cursor: pointer;
}

.contact-form button:hover {
  opacity: 0.85;
}
</style>

<div class="contact-wrap">
  <h1>Contact</h1>

  <form
    class="contact-form"
    action="https://formspree.io/f/YOUR_FORMSPREE_ID"
    method="POST"
  >
    <div class="field">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required />
    </div>

    <div class="field">
      <label for="message">Message</label>
      <textarea id="message" name="message" required></textarea>
    </div>

    <button type="submit">Send</button>
  </form>
</div>